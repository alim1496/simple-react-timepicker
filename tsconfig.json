{
	"compilerOptions": {
		// Default
		"target": "es6",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		// Added
		"jsx": "react",
		"module": "ESNext",
		"declaration": true,
		"declarationDir": "dist",
		"sourceMap": true,
		"outDir": "dist",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"rootDir": "src",
		"declarationMap": true,
		"lib": ["es2017", "dom"]
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"dist",
		"lib"
	]
}